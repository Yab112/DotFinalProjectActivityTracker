{
  "compilerOptions": {
    "target": "ES6",                         
    "lib": ["DOM", "DOM.Iterable", "ESNext"], 
    "module": "ESNext",                      
    "moduleResolution": "node",             
   "jsx": "react-jsx",                     
    "strict": true,                          
    "skipLibCheck": true,                    
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", 
    "noEmit": true,   
  },
  "include": ["src", "src/components/ui/textarea.tsx", "@/hooks"], 
  "exclude": ["node_modules"]
}
